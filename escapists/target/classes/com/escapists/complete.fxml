<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="720" prefWidth="1280" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.escapists.Controllers.CompleteController">

    <children>

        <!-- Background Image -->
        <ImageView id="bgImage" fitHeight="1080" fitWidth="1920" preserveRatio="false">
            <image>
                <Image url="@../../complete.png" />
            </image>
        </ImageView>

        <!-- LEFT PANEL -->
        <VBox fx:id="vBox" prefHeight="720" prefWidth="420" spacing="20" styleClass="left-panel" stylesheets="@styles.css">

            <padding>
                <Insets left="40" top="40" />
            </padding>

            <children>

                <!-- TITLE -->
                <Label styleClass="title-text" text="You Escaped!" />

                <!-- TIME COMPLETED -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <children>
                        <Label styleClass="stat-label" text="Time Completed:" />
                        <Label fx:id="lblTimeCompleted" styleClass="stat-value" text="--:--" />
                    </children>
                </HBox>

                <!-- TIME LEFT -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <children>
                        <Label styleClass="stat-label" text="Time Left:" />
                        <Label fx:id="lblTimeLeft" styleClass="stat-value" text="--:--" />
                    </children>
                </HBox>

                <!-- SCORE -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <children>
                        <Label styleClass="stat-label" text="Score:" />
                        <Label fx:id="lblScore" styleClass="stat-value" text="----" />
                    </children>
                </HBox>

                <!-- HINTS USED -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <children>
                        <Label styleClass="stat-label" text="Hints Used:" />
                        <Label fx:id="lblHints" styleClass="stat-value" text="0" />
                    </children>
                </HBox>

                <!-- TOP SCORES -->
                <Label styleClass="top-score-title" text="Top Scores" />

                <!-- SCORE BOXES -->
                <VBox prefWidth="350" spacing="8">

                    <HBox styleClass="score-box">
                        <children><Label fx:id="score1" styleClass="stat-value" text="" /></children>
                    </HBox>

                    <HBox styleClass="score-box">
                        <children><Label fx:id="score2" styleClass="stat-value" text="" /></children>
                    </HBox>

                    <HBox styleClass="score-box">
                        <children><Label fx:id="score3" styleClass="stat-value" text="" /></children>
                    </HBox>

                    <HBox styleClass="score-box">
                        <children><Label fx:id="score4" styleClass="stat-value" text="" /></children>
                    </HBox>

                    <HBox styleClass="score-box">
                        <children><Label fx:id="score5" styleClass="stat-value" text="" /></children>
                    </HBox>

                </VBox>

            </children>
        </VBox>

        <!-- CONTINUE BUTTON -->
        <Button fx:id="btnContinue" layoutX="1100" layoutY="650" onAction="#btnContinue" prefHeight="45" prefWidth="150" text="Continue â–º" />

    </children>
</AnchorPane>
